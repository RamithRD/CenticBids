<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <ImageView
            android:id="@+id/auctionItemListImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/auctionItemListNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audi"
            android:textSize="@dimen/_14ssp"/>

        <TextView
            android:id="@+id/auctionItemListDescTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports 30 Automatic"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONTHLY"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10sdp" />

        <TextView
            android:id="@+id/vehicleListMonPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52,000"
            android:textSize="@dimen/_20ssp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/auctionItemMoreDetailsBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/primary_dark"
            android:clickable="true"
            android:padding="@dimen/_10sdp"
            android:text="BID NOW"
            app:cornerRadius="@dimen/_5sdp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>